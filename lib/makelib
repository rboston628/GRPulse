## Make this with 
##   make -f makelib

.SUFFIXES:
.SUFFIXES: .cpp .o

CC=g++ -std=c++11

## files needed to compile stellar models
#  dependencies
LIBDEPS = Splinor.h  chandra.h
#  source
LIBSRC = Splinor.cpp chandra.cpp

## prepare object names
LIBOBJ = $(patsubst %.cpp, %.o, $(LIBSRC))


## Main rule for library
#	g++ -std=c++11 -c -o Splinor.o Splinor.cpp
#	ar rcs mylib.a Splinor.o matrix.o


# link all objects of library together
library: $(LIBOBJ)
	ar rcs mylib.a $(LIBOBJ)

# for each library object needed above, compile from the source
$(LIBOBJ): %.o: %.cpp
	$(CC) -c -o $@ $<

.PHONY: clean

clean:
	rm -f *.o